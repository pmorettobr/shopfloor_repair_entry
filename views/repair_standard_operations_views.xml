<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Formulário do Roteiro Padrão -->
    <record id="view_repair_standard_route_form" model="ir.ui.view">
        <field name="name">repair.standard.route.form</field>
        <field name="model">repair.standard.route</field>
        <field name="arch" type="xml">
            <form string="Roteiro Padrão de Reparo">
                <header>
                    <button name="action_load_default_operations" 
                            type="object" 
                            string="Carregar Operações Padrão" 
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nome do Roteiro"/>
                        </h1>
                    </div>
                    
                    <group>
                        <field name="active"/>
                    </group>
                    
                    <notebook colspan="4">
                        <page string="Operações" name="operations_page">
                            <field name="operation_ids" 
                                   nolabel="1"
                                   context="{'default_active': True}">
                                <tree editable="bottom" 
                                      decoration-muted="not active"
                                      sample="1">
                                    <field name="sequence" widget="handle" optional="hide"/>
                                    <field name="name" required="1" width="30%"/>
                                    <field name="workcenter_id" required="1" width="25%"/>
                                    <field name="time_cycle" width="10%"/>
                                    <field name="note" width="35%"/>
                                    <field name="active" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Lista de Roteiros -->
    <record id="view_repair_standard_route_tree" model="ir.ui.view">
        <field name="name">repair.standard.route.tree</field>
        <field name="model">repair.standard.route</field>
        <field name="arch" type="xml">
            <tree string="Roteiros Padrão de Reparo">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Ação e Menu -->
    <record id="action_repair_standard_route" model="ir.actions.act_window">
        <field name="name">Roteiros Padrão de Reparo</field>
        <field name="res_model">repair.standard.route</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_repair_config" 
              name="Reparos" 
              parent="mrp.menu_mrp_configuration" 
              sequence="10"/>
    
    <menuitem id="menu_repair_standard_route" 
              name="Roteiros Padrão" 
              parent="menu_repair_config" 
              action="action_repair_standard_route" 
              sequence="10"/>
</odoo>
