<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Herança do Formulário de OP -->
    <record id="view_mrp_production_form_inherit_entry" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit.entry</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            
            <!-- Adiciona campo de vínculo após o campo origin (no header da OP) -->
            <xpath expr="//field[@name='origin']" position="after">
                <field name="equipment_entry_id" invisible="1"/>
            </xpath>
            
            <!-- Adiciona grupo de informações do equipamento no sheet -->
            <xpath expr="//sheet" position="inside">
                <group name="equipment_info" string="Equipamento de Cliente" invisible="not equipment_entry_id">
                    <field name="equipment_entry_id" readonly="1"/>
                    <field name="partner_id" readonly="1"/>
                </group>
                
                <!-- Community: Rastreio Manual -->
                <group name="shopfloor_tracking" string="Rastreio Chão de Fábrica">
                    <field name="current_workcenter_id"/>
                    <field name="current_operation"/>
                </group>
            </xpath>
            
        </field>
    </record>
</odoo>
