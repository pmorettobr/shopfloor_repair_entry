<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_production_form_inherit_entry" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit.entry</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="equipment_entry_id" invisible="not equipment_entry_id"/>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <group name="equipment_info" string="Equipamento de Cliente" invisible="not equipment_entry_id">
                    <field name="equipment_entry_id"/>
                    <field name="partner_id" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
